generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model logs {
    id      String      @id @default(uuid())
    name    String      @unique
    slug    String      @unique
    events  events[]
}

model events {
    id          Int             @id @default(autoincrement())
    level       String      
    message     String
    meta        Json
    timestamp   DateTime?
    createdAt   DateTime?       @default(now())

    logs    logs @relation(fields: [logId], references: [id])
    logId   String
}