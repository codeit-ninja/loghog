generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model logs {
    id      String      @id @default(uuid())
    path    String      @unique
    name    String
    group   String?
    events  events[]
}

model events {
    id          Int             @id @default(autoincrement())
    level       String
    message     String
    meta        Json
    label       String?
    timestamp   DateTime?
    createdAt   DateTime?       @default(now())

    logs    logs @relation(fields: [logId], references: [id])
    logId   String
}

model users {
    id          String      @id @default(uuid())
    email       String      @unique
    password    String
    name        String
    role        String      @default("user")
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt

    tokens      tokens[]    @relation("userTokens")
}

model tokens {
    id          String      @id @default(uuid())
    userId      String
    token       String      @unique
    expiresAt   DateTime    @default(dbgenerated("(now() + interval '30 days')"))
    createdAt   DateTime    @default(now())
    users       users       @relation("userTokens", fields: [userId], references: [id])
}